{
  "name": "@getcommunity/roots",
  "description": "Get Community Roots",
  "version": "0.0.0",
  "author": "@GetCommunity <ryan@getcommunity.com> (https://github.com/GetCommunity)",
  "contributors": [
    "Joey Grable <joey@getcommunity.com> (https://joeygrable.com)"
  ],
  "devDependencies": {
    "@changesets/cli": "^2.29.5",
    "@getcommunity/config-prettier": "^0.0.10",
    "concurrently": "^9.2.0",
    "depcheck": "^1.4.7",
    "syncpack": "13.0.4",
    "turbo": "^2.5.5",
    "typescript": "^5.8.3"
  },
  "keywords": [],
  "license": "SEE LICENSE",
  "packageManager": "pnpm@9.15.9",
  "private": true,
  "repository": "getcommunity/roots.git",
  "scripts": {
    "dev:www": "concurrently \"pnpm dev:backend\" \"pnpm dev:frontend\"",
    "dev:backend": "cd apps/backend && pnpm dev",
    "dev:frontend": "cd apps/frontend && pnpm dev",
    "test:backend": "cd apps/backend && pnpm test:e2e:server",
    "install-update": "pnpm install:backend && pnpm install:frontend",
    "install:backend": "cd apps/backend && pnpm install",
    "install:frontend": "cd apps/frontend && pnpm install",
    "update-validators": "pnpm update:frontend-validators && pnpm update:backend-validators",
    "update:frontend-validators": "cd apps/frontend && pnpm update @getcommunity/gc-validators@latest",
    "update:backend-validators": "cd apps/backend && pnpm update @getcommunity/gc-validators@latest",
    "build": "turbo build",
    "ci:changeset": "changeset",
    "ci:version": "changeset version && pnpm i --no-frozen-lockfile && git add .",
    "ci:release": "pnpm build && changeset publish",
    "clean": "turbo clean && rm -rf node_modules && rm -rf .turbo",
    "dev": "turbo dev",
    "format": "turbo format",
    "graph:build:all": "turbo run build --graph --dry | dot -Tpng -o./assets/dependency-graphs/turbo_graph-build-all.png",
    "install:all": "pnpm install && pnpm recursive install",
    "lint": "turbo lint",
    "test": "turbo test",
    "typecheck": "turbo typecheck"
  },
  "workspaces": [
    "packages/*",
    "apps/*"
  ]
}